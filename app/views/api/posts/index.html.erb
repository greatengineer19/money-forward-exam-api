<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Posts</h1>
    <%= link_to "New Post", new_api_post_path, class: "btn btn-primary" %>
  </div>

  <div class="space-y-4">
    <% @posts.each do |post| %>
      <div class="bg-white p-6 rounded-lg shadow">
        <div class="flex justify-between items-start mb-2">
          <h2 class="text-2xl font-semibold">
            <%= link_to post.title, api_post_path(post) %>
          </h2>
          <% if post.published? %>
            <span class="badge badge-success">Published</span>
          <% else %>
            <span class="badge badge-secondary">Draft</span>
          <% end %>
        </div>
        
        <p class="text-gray-600 mb-4">
          <%= truncate(post.content, length: 200) %>
        </p>
        
        <div class="flex justify-between items-center text-sm text-gray-500">
          <div>
            By <%= post.user.email %> â€¢ 
            <%= time_ago_in_words(post.created_at) %> ago
          </div>
          
          <div class="space-x-3">
            <%= link_to "View", api_post_path(post), class: "text-blue-600" %>
            <%= button_to "Delete", api_post_path(post), method: :delete,
                data: { turbo_confirm: "Are you sure?" },
                class: "text-red-600" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>