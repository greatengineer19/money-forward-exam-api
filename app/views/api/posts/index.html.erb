<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center pb-6 mb-8 border-b border-gray-200">
    <h1 class="text-4xl font-extrabold text-gray-900">Posts</h1>
    <%= link_to "New Post", new_api_post_path, class: "px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @posts.each do |post| %>
      <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition duration-300 ease-in-out transform hover:-translate-y-2 flex flex-col h-full">
        <div class="flex justify-between items-start mb-4">
          <h2 class="text-2xl font-extrabold text-gray-900 leading-tight">
            <%= link_to post.title, api_post_path(post), class: "hover:text-blue-700 transition duration-300 ease-in-out" %>
          </h2>
          <% if post.published? %>
            <span class="px-3 py-1 bg-green-200 text-green-800 text-xs font-semibold rounded-full">Published</span>
          <% else %>
            <span class="px-3 py-1 bg-gray-200 text-gray-800 text-xs font-semibold rounded-full">Draft</span>
          <% end %>
        </div>
        
        <p class="text-gray-600 text-sm mb-6 flex-grow">
          <%= truncate(post.content, length: 200) %>
        </p>
        
        <div class="flex justify-between items-center text-xs text-gray-500 mt-auto pt-4 border-t border-gray-100">
          <div>
            By <%= post.user.email %> â€¢ 
            <%= time_ago_in_words(post.created_at) %> ago
          </div>
          
          <div class="flex space-x-2">
            <%= link_to "View", api_post_path(post), class: "px-4 py-2 bg-blue-100 text-blue-700 rounded-lg text-xs font-semibold hover:bg-blue-200 transition duration-300 ease-in-out" %>
            <%= button_to "Delete", api_post_path(post), method: :delete,
                data: { turbo_confirm: "Are you sure?" },
                class: "px-4 py-2 bg-red-100 text-red-700 rounded-lg text-xs font-semibold hover:bg-red-200 transition duration-300 ease-in-out" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>